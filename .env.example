SUI_LUCK_TREASURY_CAP_ID=0x...
SUI_REWARD_POOL_ID=0x...

# === Pricing ===
SUI_USD_PRICE=1.5
STARS_TO_USD_RATE=0.013

# === Supabase ===
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
